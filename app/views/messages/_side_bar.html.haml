.side-bar
  .side-bar__user-name
    .top-items
      .top-items__name
        = current_user.name
      .top-items__icons
        = link_to new_group_path, class: "top-items__btn" do
          = icon('far', 'edit', class: "top-items__btn--icon")
          %span<>
        = link_to edit_user_path(current_user), class: "top-items__btn" do
          = icon('fas', 'cog', class: "top-items__btn--icon")

  .side-bar__group-list
    - current_user.groups.each do |group|
      .list-items
        = link_to group_messages_path(group) do
          .list-items__name
            = group.name
          .list-items__message
            = group.show_last_message