.message{data: {message: {id: message.id}}}
.list-items
  %span.list-items__name
    = message.user.name
  %span.list-items__date
    = message.created_at.strftime("%Y/%m/%d(%a) %H:%M:%S")
  .list-items__message
    - if message.text.present?
      = message.text
    = image_tag message.image.url, class: 'list-items__message__image' if message.image.present?