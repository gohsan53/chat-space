.main-chat
  .main-chat__group-info
    .info-items
      .info-items__group-name
        group-name
      .info-items__group-members
        Member : username 
    .info-edit
      = link_to edit_group_path(current_user), class: "info-edit__btn" do
        = "Edit"

  .main-chat__message-list
    = render @messages

  .main-chat__message-form
    = form_for [@group, @message], html: { class: 'form' } do |f|
      .form__items
        = f.text_field :text, class: 'form__items__text', placeholder: 'type a message'
        .form__items__label
          = f.label :image, class: 'form__items__label__image' do
            = icon('far', 'image', class: 'form__items__label__image--visible')
            = f.file_field :image, class: 'form__items__label__image--invisible'
      = f.submit 'Send', class: 'form__submit-btn'